<Window x:Class="BackgroundColorChange.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BackgroundColorChange"
        mc:Ignorable="d"        
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="{Binding Text, ElementName=color}">
        <Button Name="red" Content="Crimson" HorizontalAlignment="Left" Margin="149,145,0,0" VerticalAlignment="Top" Width="125" Height="98" Background="#FFFF6666" Click="red_Click"/>
        <Button Name="blue" Content="MediumTurquoise" HorizontalAlignment="Left" Margin="320,145,0,0" VerticalAlignment="Top" Width="123" Height="98" Background="#FF0068FF" Click="blue_Click"/>
        <Button Name="yellow" Content="PaleGoldenrod" HorizontalAlignment="Left" Margin="482,145,0,0" VerticalAlignment="Top" Width="116" Height="98" Background="#FFF7FF52" Click="yellow_Click"/>
        <TextBlock x:Name="color" HorizontalAlignment="Left" Margin="149,275,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="106" Width="449"/>

    </Grid>
</Window>
